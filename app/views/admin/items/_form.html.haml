= simple_form_for([:admin, @item]) do |f|
  = f.error_notification

  .row
    .col-md-3
      .form-group
        = f.input :name, label: "Название", input_html: {class: "form-control"}
    .col-md-3
      .form-group
        = f.association :category, label: "Категория", input_html: {class: "form-control"}
    .col-md-3
      .form-group
        = f.input :icon

    .col-md-3
      .form-group
        = f.input :slug        
  


  .form-group
    = f.input :description,  label: "Описание", input_html: {class: "form-control", rows: 5}


  .form-actions
    = f.submit "Применить", class: "btn btn-success"
