= simple_form_for([:admin, @landing]) do |f|
  = f.error_notification

  .form-actions
    = f.submit "Применить", class: "btn btn-success"


  .row
    .col-md-6
      .form-group
        = f.input :name, label: "Название", input_html: {class: "form-control"}
    .col-md-6
      .form-group
        = f.association :item, label: "Категория", input_html: {class: "form-control"}

    .col-md-12

      #editor
        %textarea{:name => "landing[code]", :style => "display: none;"}
          = raw @landing.code

      :javascript
        var editor = ace.edit("editor");
        editor.setTheme("ace/theme/monokai");
        var textarea = $('textarea[name="landing[code]"]');
        editor.getSession().on("change", function () {
          textarea.val(editor.getSession().getValue());
        });












